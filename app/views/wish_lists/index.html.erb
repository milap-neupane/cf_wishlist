<p id="notice"><%= notice %></p>

<h1>Listing Wish Lists</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wish_lists.each do |wish_list| %>
      <tr>
        <td>
          <h3><%= wish_list.title %></h3>
        </td>
        <td>
          <p><%= wish_list.price %></p>
        </td>
        <td>
          <p><%= wish_list.required_quantity %></p>
        </td>
        <% if can? :wish_lists, current_user %>
          <td><%= link_to 'Show', wish_list %></td>
          <td><%= link_to 'Edit', edit_wish_list_path(wish_list) %></td> 
          <td><%= link_to 'Destroy', wish_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <td>
          <%= form_for wish_list_pledge_path(wish_list) do |f| %>
            <%= f.number_field :item_count %>
            <%= submit_tag 'Pledge' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :wish_lists, current_user %>
  <%= link_to 'New Wish list', new_wish_list_path %>
<% end %>
